<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#000000" />
         <gradient android:angle="-90" android:startColor="#D3D3D3" android:endColor="#000000"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00cc00" />
         <solid android:color="#001a00"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#000000" />
         <gradient android:angle="-90" android:startColor="#7EC0EE" android:endColor="#000000" />            
     </shape>
 </item>
</selector>